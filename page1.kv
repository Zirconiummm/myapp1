WindowManager:
    Contpage1:
    Contpage2:
    Contpage3:

<Contpage1>:
    name: "main"

    lavel_main: welcome_label
    log_main: user
    passw_main: password
    logbut: logB

    MDCard:
        size_hint: None, None
        size: 300, 450
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        elevation: 10
        padding: 20
        spacing: 20
        orientation: 'vertical'
        MDLabel:
            id: welcome_label
            text: "КУ"
            font_size: 40
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        MDTextFieldRound:
            id: user
            hint_text: "Логин"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
        MDTextFieldRound:
            id: password
            hint_text: "Пароль"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True
        MDFillRoundFlatButton:
            id: logB
            text: "Вход"
            font_size: 18
            pos_hint: {"center_x": 0.5}
            size_hint_x: None
            width: 200
            on_release:
                root.loginf()
        MDFillRoundFlatButton:
            text: "Регистрация"
            font_size: 18
            pos_hint: {"center_x": 0.5}
            size_hint_x: None
            width: 200

            on_release:
                app.root.current = "second"

        MDFillRoundFlatButton:
            text: "Далее"
            pos_hint: {"center_x": 0.5}
            on_release:
                app.root.current = "body"

<Contpage2>:

    name: "second"

    mailC2: mailid
    loginC2: login_input
    passwordC2: passwordr
    password2C2: passwordr2
    labelreg: registor_label

    MDCard:
        size_hint: None, None
        size: 300, 500
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        elevation: 10
        padding: 10
        spacing: 10
        orientation: 'vertical'
        MDLabel:
            id: registor_label
            text: "Регистрируйся"
            font_size: 40
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        MDTextFieldRound:
            id: mailid
            hint_text: "Почта"
            icon_right: ""
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
        MDTextFieldRound:
            id: login_input
            hint_text: "Никнейм"
            icon_right: ""
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
        MDTextFieldRound:
            id: passwordr
            hint_text: "Пароль"
            icon_right: ""
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
        MDTextFieldRound:
            id: passwordr2
            hint_text: "Повторите пароль"
            icon_right: ""
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
        MDFillRoundFlatButton:
            text: "Завершить"
            font_size: 18
            pos_hint: {"center_x": 0.5}
            size_hint_x: None
            width: 200

            on_release:
                root.Registration()
        MDFillRoundFlatButton:
            text: "Назад"
            font_size: 18
            pos_hint: {"center_x": 0.5}
            size_hint_x: None
            width: 200
            on_release:
                app.root.current = "main"

        Widget:
            size_hint_y: None
            height: 10

<Contpage3>:
    name: 'body'
    GridLayout:
        rows: 2
        Label:
            text: 'Идут работы'
        Button:
            text: 'назад'
            on_release:
                app.root.current = "main"

